{
  "manifest_version": 3,
  "name": "МЭШ Токен Хелпер",
  "version": "1.0",
  "description": "Помогает получить токен для API МЭШ",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://authedu.mosreg.ru/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
} 